<h1>Welcome Back! Login in Below</h1>

<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%= f.label :Username %>
    <%= f.text_field :username, placeholder: 'Username'%><br>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Password'%><br>
    <button type="submit">Login</button>
<%end%>



<%= button_to "Signup", '/users/new?', method: :get%>
<%= button_to "Return to Welcome Page", '/', method: :get%> <br>
