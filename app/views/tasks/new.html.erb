





<h3> What task should be created for <%= Project.all[(params['project_id'].to_i - 1)].title %>? </h3>

<%= form_with model: @task do |f| %>
    <%= f.label :Objective%><br>  
    <%= f.text_area :objective, size: "60x5" %> <br>   
    <%= f.label :Complete %>
    <%= f.check_box :complete %> <br>
    <%= f.submit "Create Task"%> 
<% end %>